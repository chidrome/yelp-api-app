<h2>Sign Up</h2>

<!-- TODO: Username, Firstname, Lastname, Password, Password Verification and Email form. -->
<div class="row">
	<form action="/auth/signup" method="POST" class="col s12">
		<div class="row">
			<div class="input-field col s6">
				<div>
					<label>First Name</label>
					<input type="text" name="first_name" placeholder="Your First Name" value="<%= previousData ? previousData.first_name : ''%>">
				</div>
			</div>
			<div class="input-field col s6">
				<div>
					<label>Last Name</label>
					<input type="text" name="last_name" placeholder="Your Last Name" value="<%= previousData ? previousData.last_name : ''%>">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<div>
					<label>Username</label>
					<input type="text" name="username" placeholder="Your Username" value="<%= previousData ? previousData.username : ''%>">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<div>
					<label>Password</label>
					<input type="password" name="password" placeholder="Your Password" autocomplete="off">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<div>
					<label>Retype Password</label>
					<input type="password" name="password_verify" placeholder="Your Password" autocomplete="off">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<div>
					<label>Email</label>
					<input type="text" name="email" placeholder="Your Email" value="<%= previousData ? previousData.email : ''%>">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s9">
				<div>
					<label>Profile Img</label>
					<input type="text" name="profileImg" value="<%= previousData ? previousData.profileImg : ''%>">
				</div>
			</div>
			<div class="input-field col s3">
				<div>
					<label>Date of Birth</label>
					<input type="text" class="datepicker" name="dob" value="<%= previousData ? previousData.dob : ''%>">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<div>
					<label>Small Snippet About Yourself</label>
					<input type="text" name="bio" placeholder="Bio" value="<%= previousData ? previousData.bio : ''%>">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<label>Favorite Cuisine</label>
				<input type="text" name="favorite_cuisine" placeholder="Favorite Cuisine" value="<%= previousData ? previousData.favorite_cuisine : ''%>">
			</div>
		</div>
			
		<button class="btn waves-effect waves-light" type="submit" name="action">Sign Me Up!
			<i class="material-icons right">send</i>
		</button>
	</form>
</div>